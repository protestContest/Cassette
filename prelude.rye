def (nil? x) (eq? nil x)

def (reverse-onto list base) do
  (if (nil? list)
      base
      ((fn (rest)
          (set-tail! list base)
          (reverse-onto rest list))
        (tail list)))
end

def (reverse list) (reverse-onto list nil)

def (reduce list acc fun) do
  (if (nil? list)
      acc
      (reduce (tail list)
        (fun (head list) acc)
        fun))
end

def (map list fun)
  (reverse
    (reduce list nil (fn (item acc)
                      ((fun item) | acc))))

def (filter list test)
  (reverse
    (reduce list nil
      (fn (item acc)
        (if (test item)
            (item . acc)
            acc))))

