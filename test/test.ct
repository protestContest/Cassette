import List
import Math

let width = 800,
    height = 480,
    canvas = Canvas.new width height

Canvas.text "Lines!" 200 0 canvas

def (rand_line i) do
  let x0 = i * 70 + 100,
      y0 = Math.rand_int height,
      x1 = Math.rand_int width,
      y1 = Math.rand_int height
  Canvas.line x0 y0 x1 y1 canvas
end

List.map (List.range 0 100) (i) -> (rand_line i)
