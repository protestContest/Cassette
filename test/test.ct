import List as List

let width = 800,
    height = 480,
    canvas = new_canvas width height

inspect draw_line

def (frame view) do
  let right = view.x + view.width,
      top = view.y + view.height

  draw_line view.x view.y view.x top canvas
  draw_line view.x view.y right view.y canvas
  draw_line view.x top right top canvas
  draw_line right view.y right top canvas
end

let view = {x: 100 y: 100 width: 500 height: 300}
frame view
