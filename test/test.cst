import Enum

let floor = Math.floor,
    width = (Canvas.width),
    height = (Canvas.height),
    Pi = (Math.Pi),
    line = Canvas.line

def (rect x y w h) do
  line x y x+w y
  line x+w y x+w y+h
  line x y+h x+w y+h
  line x y x y+h
end

def (draw_pt pt) do
  rect (pt 0) (pt 1) 2 2
end

