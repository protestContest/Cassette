module Net
import Value
export listen, accept, connect, send, recv, nl

let nl = Value.format([0x0A, 0x0D])

def listen(port) trap(:listen, port)
def accept(socket) trap(:accept, socket)
def connect(host, port) trap(:connect, host, port)
def send(socket, data) trap(:send, socket, data)
def recv(socket, length) trap(:recv, socket, length)
