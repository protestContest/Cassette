module Window
import Result as *

def (new width height) (try! (Device.open :window {width, height}))
def (clear color window)(try! (Device.write window {:clear, color}))
def (text string x y window) (try! (Device.write window {:text, string, x, y}))
def (line x1 y1 x2 y2 window) (try! (Device.write window {:line, x1, y1, x2, y2}))
def (blit img x y w h window) (try! (Device.write window {:blit, img, x, y, w, h}))
